<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background_light">

    <!-- Encabezado de la pantalla -->
    <TextView
        android:id="@+id/tv_activation_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activation_header"
        android:textSize="24sp"
        android:textColor="@color/primary_text"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"/>

    <!-- Mensaje de confirmación -->
    <TextView
        android:id="@+id/tv_activation_confirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activation_confirmation"
        android:textSize="16sp"
        android:textColor="@color/secondary_text"
        android:layout_below="@id/tv_activation_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textAlignment="center"/>

    <!-- Botón para abrir WhatsApp -->
    <Button
        android:id="@+id/btn_open_whatsapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_whatsapp_button"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/button_color"
        android:drawableLeft="@drawable/ic_whatsapp"
        android:drawablePadding="8dp"
        android:layout_below="@id/tv_activation_confirmation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:padding="12dp"/>

    <!-- Instrucciones adicionales -->
    <TextView
        android:id="@+id/tv_activation_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activation_instructions"
        android:textSize="14sp"
        android:textColor="@color/instruction_text"
        android:layout_below="@id/btn_open_whatsapp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textAlignment="center"/>

    <!-- Imagen decorativa (opcional) -->
    <ImageView
        android:id="@+id/iv_activation_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_activation"
        android:layout_below="@id/btn_open_whatsapp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"/>

</RelativeLayout>
